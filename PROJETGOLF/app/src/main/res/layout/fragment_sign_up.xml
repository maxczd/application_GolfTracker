<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="BIENVENUE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView"
            android:fontFamily="monospace"
            android:textSize="36sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="40dp"/>

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/log_in_facebook"
            android:id="@+id/FacebookImageButton"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/log_in_google"
            android:id="@+id/GoogleImageButton"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_height="20dp">

            <View
                android:layout_width="120dp"
                android:layout_gravity="center_vertical"
                android:layout_height="2dp"
                android:layout_marginLeft="44dp"
                android:background="#ffffff" />

            <TextView
                android:text="ou"
                android:id="@+id/ouText"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="120dp"
                android:layout_gravity="center_vertical"
                android:layout_height="2dp"
                android:background="#ffffff"/>

        </LinearLayout>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEt"
            android:hint="Email"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passEt1"
            android:hint="Mot de passe" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passEt2"
            android:hint="Confirmation Mot de passe" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pseudoEt"
            android:hint="Pseudo" />

        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/signUpB"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button" />
    </LinearLayout>

</FrameLayout>
